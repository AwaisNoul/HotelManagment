<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HotelManagment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#04243A</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ProfileMenuItemStyle">
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="ShapeAppearance.Rounded" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/_20sdp</item> <!-- Adjust the radius as needed -->
        <item name="cornerSize">@dimen/_20sdp</item> <!-- Adjust the radius as needed -->
        <item name="cardCornerRadius">@dimen/_20sdp</item> <!-- Adjust the radius as needed -->
    </style>


</resources>