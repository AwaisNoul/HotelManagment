<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04243A"
    tools:context=".Activitys.Next">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Hotel"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Description"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here Description..."
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:textColorHint="@color/textHint"
            android:background="@drawable/rounded_edittext_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's nearby"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/whatsnear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here what's nearby..."
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:textColorHint="@color/textHint"
            android:background="@drawable/rounded_edittext_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top attractions"
            android:textStyle="italic"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <EditText
            android:id="@+id/topattractions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here top attractions..."
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            android:textColorHint="@color/textHint"
            android:background="@drawable/rounded_edittext_background" />

        <TextView
            android:id="@+id/addhotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/btn_round_background"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="Add Hotel"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_14sdp" />


    </LinearLayout>

</ScrollView>